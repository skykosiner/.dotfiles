setxkbmap -option caps:ctrl_modifier
setxkbmap -option ctrl:nocaps
#tmux-start-zsh

cComp() {
    cc $1
    ./a.out
}

searchZshHistory() {
    selected=`cat ~/.zsh_history | fzf`
    $selected
}

dotfilesStatus() {
    pushd $DOTFILES
    git status
    popd
}

searchDotFiles() {
    items=`find $DOTFILES`
    selected=`echo "$items" | fzf --height=15`
    nvim $selected
}

password() {
    selected=`cat ~/.dotfiles/password | fzf --height=7`
    pass $selected -c
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    if [[ $# -eq 1 ]]; then
        pushd $DOTFILES
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $DOTFILES
        git add .
        git commit -m "commit it baby"
        git push origin master
        popd
    fi
}

snyc_mail() {
    mw -Y
}

commitSchoolWork() {
    pushd $SCHOOLWORK
    git add .
    git commit -m "another happy landing"
    git push origin master
    popd
}

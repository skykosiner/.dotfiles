setxkbmap -option caps:escape
#tmux-start-zsh

TODO() {
    if [[ $# -eq 1 ]]; then
        grep "TODO" **/*.$1 --exclude-dir="node_modules/"
    elif [[ $# -eq 2 ]]; then
        grep "TODO" $2/**/*.$1 --exclude-dir="node_modules/"
    fi
}

cComp() {
    cc $1
    ./a.out
}

killProcess() {
    if [[ $# -eq 1 ]]; then
        ps ax | awk '{print $5}' | dmenu -l 30 | xargs -r pkill $5
    else
        ps ax | awk '{print $5}' | rofi -dmenu - | xargs -r pkill $5
    fi
}

dotfilesStatus() {
    pushd $DOTFILES
    git status
    popd
}

searchDotFiles() {
    items=`find $DOTFILES`
    selected=`echo "$items" | fzf --height=15`
    nvim $selected
}

password() {
    selected=`cat ~/.dotfiles/password | fzf --height=7`
    pass $selected -c
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    if [[ $# -eq 1 ]]; then
        pushd $DOTFILES
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $DOTFILES
        git add .
        git commit -m "commit it baby"
        git push origin master
        popd
    fi
}

commitSchoolWork() {
    if [[ $# -eq 1 ]]; then
        pushd $SCHOOLWORK
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $SCHOOLWORK
        git add .
        git commit -m "another happy landing"
        git push origin master
        popd
    fi
}

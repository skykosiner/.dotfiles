#!/usr/bin/env zsh
# Set the caps key to caps lock, as it is easier to hit on my kinesis
setxkbmap -option caps:super
#tmux-start-zsh

TODO() {
    if [[ $# -eq 1 ]]; then
        grep "TODO" **/*.$1 --exclude-dir="node_modules/"
    elif [[ $# -eq 2 ]]; then
        grep "TODO" $2/**/*.$1 --exclude-dir="node_modules/"
    fi
}

cComp() {
    cc $1
    ./a.out
}

killProcess() {
    if [[ $# -eq 1 ]]; then
        ps ax | awk '{print $5}' | dmenu -l 30 | xargs -r pkill $5
    else
        ps ax | awk '{print $5}' | rofi -dmenu - | xargs -r pkill $5
    fi
}

dotfilesStatus() {
    pushd $DOTFILES
    git status
    popd
}

searchDotFiles() {
    items=`cd $DOTFILES && find .`
    echo "$items" | fzf --height=15 | xargs -I {} nvim "~/.dotfiles/{}"
}

password() {
    selected=`cat ~/.dotfiles/password | fzf --height=10`
    pass $selected -c
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    if [[ $# -eq 1 ]]; then
        pushd $DOTFILES
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $DOTFILES
        git add .
        git commit -m "commit it baby"
        git push origin master
        popd
    fi
}

commitSchoolWork() {
    if [[ $# -eq 1 ]]; then
        pushd $SCHOOLWORK
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $SCHOOLWORK
        git add .
        git commit -m "another happy landing"
        git push origin master
        popd
    fi
}

cpuTemp() {
    sensors | awk '/Core 0/ {print " " $3}' | sed "s/+//g; s/\s//g"
}

convertWordToPDF() {
    pandoc -o $1.pdf -f docx $1.docx
}


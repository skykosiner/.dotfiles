#!/usr/bin/env bash

montiors=$(echo "Laptop
Double montiors
Single montior" | dmenu -l 30)

case $montiors in
    "Laptop")
        xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-0 --off --output DP-4 --off --output eDP-1-1 --mode 1920x1080
        ;;
    "Double montiors")
        # Main screen as DP-4 HDMI-0 on top
        xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-0 --mode 1920x1080 --pos 64x0 --rotate normal --output DP-4 --primary --mode 2560x1440 --pos 0x1080 --rotate normal --output eDP-1-1 --off

        # Two double screens with DP-4 as main
        # xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-0 --mode 1920x1080 --pos 2560x360 --rotate normal --output DP-4 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output eDP-1-1 --off
        # screenZoom

        # Two double screens with HDMI-0 as main
        # xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-0 --primary --mode 1920x1080 --pos 1920x0 --rotate normal --output DP-4 --mode 1920x1080 --pos 0x0 --rotate normal --output eDP-1-1 --off

        # Vertical montior
        # xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-0 --mode 1920x1080 --pos 1920x0 --rotate left --output DP-4 --primary --mode 1920x1080 --pos 0x840 --rotate normal --output eDP-1-1 --off
        ;;
    "Single montior")
        xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-0 --off --output DP-4 --mode 2560x1440 --pos 0x0 --rotate normal --output eDP-1-1 --off
        ;;
    *) echo "Unavailable command... $mointors"
esac

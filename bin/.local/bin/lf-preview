#!/usr/bin/env bash

case "$(file --dereference --brief --mime-type -- "$1")" in
    image/* | video/* | */pdf | audio/* | application/octet-stream) mediainfo "$1" ;;
    text/* | */xml | application/json) bat --theme gruvbox-dark -f "$1" ;;
    application/*zip) atool --list -- "$1" ;;
esac

exit 127

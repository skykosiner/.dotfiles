#!/usr/bin/env bash

title=$(xdotool getactivewindow getwindowname 2>/dev/null)

# If there is a an error, it is most likley on the desktop, so just say desktop
if [ $? -eq 1 ]; then
    echo "Desktop"
else
    size=${#title}

    if [ size > 50 ]; then
        echo "${title:0:50}..."
    else
        echo "$title"
    fi
fi

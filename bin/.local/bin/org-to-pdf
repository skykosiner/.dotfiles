#!/usr/bin/env bash
# First convert the org file to md
emacs --batch --eval "(require 'org)" $1 --funcall org-md-export-to-markdown

markdownName=$(echo "$1" | sed "s/org/md/")
pdfName=$(echo "$1" | sed "s/org/pdf/")

# Take the md file and change to pdf with pandoc and groff
pandoc "$markdownName" -t ms -o "$pdfName"

rm $markdownName

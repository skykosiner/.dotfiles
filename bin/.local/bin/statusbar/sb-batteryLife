#!/usr/bin/env bash

capacity=$(cat /sys/class/power_supply/BAT0/capacity) || exit
status=$(cat /sys/class/power_supply/BAT0/status)

if [[ $status == "Full" ]]; then
    printf "ğŸ”Œ"$capacity"%%"
elif [[ $status == "Charging" ]]; then
    printf "ğŸ”Œ"$capacity"%%"
else
    printf "ğŸ”‹"$capacity"%%"
fi

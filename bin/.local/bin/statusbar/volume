#!/usr/bin/env bash

[ "$(pulsemixer --get-mute)" = "1" ] && printf "ðŸ”‡\\n" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "70" ]; then
  icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
  icon="ðŸ”ˆ"
else
  icon="ðŸ”‰"
fi

printf "%s%s%%\\n" "$icon" "$vol"

case $BLOCK_BUTTON in
    1) ~/.local/bin/general-scripts/volumeControl -mute-vol ;;
    2) alacritty -e pulsemixer ;;
    4) ~/.local/bin/general-scripts/volumeControl -up ;;
    5) ~/.local/bin/general-scripts/volumeControl -down ;;
esac

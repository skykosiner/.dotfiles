#!/usr/bin/env bash

option=$(printf "ðŸŽµ Track\nðŸŽ¨ Artist\nðŸŽ¹ Album" | fuzzel --dmenu)

play() {
    echo "$1" | cut -d"-" -f3
}

case "$option" in
    "ðŸŽµ Track")
        songs=$(fuzzel --dmenu | xargs -I {} spt search-track {})
        if [[ ! -z $songs ]]; then
            song=$(echo "$songs" | fuzzel --dmenu)
            play "$song"
        fi
esac

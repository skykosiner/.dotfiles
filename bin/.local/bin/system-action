#!/usr/bin/env bash

export WM="dwm"
wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "â™» renew $WM\nâŒ shutdown\nğŸŒ restart\nğŸ’¤ sleep" | dmenu -h 30 -i -p 'Action: ')" in
    "â™» renew $WM") kill -HUP "$(wmpid)" ;;
    "âŒ shutdown") sudo shutdown -h now ;;
    "ğŸŒ restart") sudo shutdown -r now ;;
    "ğŸ’¤ sleep") systemctl suspend ;;
    *) exit 1 ;;
esac

#!/usr/bin/env bash

export WM=$(wmctrl -m | grep "Name: " | cut -d" " -f2)
wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "â™» renew $WM\nâŒ shutdown\nğŸŒ restart\nğŸ’¤ sleep\nğŸ”’ log out\nğŸ” slock" | dmenu -h 30 -i -p 'Action: ')" in
    "â™» renew $WM") kill -HUP "$(wmpid)" ;;
    "âŒ shutdown") sudo shutdown -h now ;;
    "ğŸŒ restart") sudo shutdown -r now ;;
    "ğŸ’¤ sleep") systemctl suspend ;;
    "ğŸ”’ log out") pkill $WM ;;
    "ğŸ” slock") slock ;;
    *) exit 1 ;;
esac

#!/usr/bin/env bash

export WM="dwm"
wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "â™»ï¸ renew $WM\nâŒshutdown\nğŸŒrestart\nğŸ’¤sleep" | dmenu -h 30 -i -p 'Action: ')" in
    "â™»ï¸ renew $WM") kill -HUP "$(wmpid)" ;;
    "âŒshutdown") sudo shutdown -h now ;;
    "ğŸŒrestart") sudo shutdown -r now ;;
    "ğŸ’¤sleep") systemctl suspend ;;
    *) exit 1 ;;
esac

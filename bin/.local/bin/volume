#!/usr/bin/env bash

MUTEVOL=$(pactl get-sink-mute @DEFAULT_SINK@ | xargs | sed 's/Mute://g' | awk '{print $1}')
VOL=$(pactl list sinks | awk '/Volume/ {print $5}' | grep -v "100%")

if [[ $MUTEVOL == "yes" ]];
then
    echo "ðŸ”‡ " $VOL
else
    if [[ $VOL > 45 ]];
    then
        echo "ðŸ”Š " $VOL
    else
        echo "ðŸ”‰ " $VOL
    fi
fi


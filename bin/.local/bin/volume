#!/usr/bin/env bash
MUTEVOL=$(pactl get-sink-mute @DEFAULT_SINK@ | xargs | sed 's/Mute://g' | awk '{print $1}')

if [[ $MUTEVOL == "yes" ]];
then
    vol=$(pactl list sinks | perl -000ne 'if(/#1/){/(Volume:.*)/; print "$1\n"}' | awk '{print $5}')
    echo "Muted at" $vol "volume"
else
    pactl list sinks | perl -000ne 'if(/#1/){/(Volume:.*)/; print "$1\n"}' | awk '{print $5}'
fi


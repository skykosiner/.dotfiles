#!/usr/bin/env bash

montiors=$(printf "ðŸ’» Laptop\nðŸ“º Double montiors left\nðŸ”€ Double montiors vertical\nâŒ¨ï¸ Double montior plus laptop\nðŸ–¥ Single montior\nðŸ’¼ Double mointor on top plus laptop" | dmenu -l 30 -fn "JetBrainsMono Nerd Font-15")

case $montiors in
    "ðŸ’» Laptop")
        xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-1 --off --output DP-4 --off --output eDP-1 --mode 2560x1600
        setxkbmap -layout real-prog-dvorak

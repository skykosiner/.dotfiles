#!/usr/bin/env bash

montiors=$(printf "ğŸ’» Laptop\nğŸ“º Double montiors left\nğŸ”€ Double montiors vertical\nâŒ¨ï¸ Double montior plus laptop\nğŸ–¥ Single montior\nğŸ’¼ Double mointor on top plus laptop" | dmenu -l 30 -fn "JetBrainsMono Nerd Font-15")

case $montiors in
    "ğŸ’» Laptop")
        xrandr --output DP-0 --off --output DP-1 --off --output DP-2 --off --output DP-3 --off --output HDMI-1 --off --output DP-4 --off --output eDP-1 --mode 2560x1600
        wal -R
        ;;
    "ğŸ’¼ Double mointor on top plus laptop")
        xrandr --output eDP-1 --mode 2560x1600 --pos 0x920 --rotate normal --output HDMI-1 --mode 1920x1080 --pos 2802x0 --rotate normal --output DP-1 --primary --mode 2560x1440 --pos 2560x1080 --rotate normal
        wal -R
        ;;
    "ğŸ“º Double montiors left")
        xrandr --output eDP-1 --off --output HDMI-1 --mode 1920x1080 --pos 2560x180 --rotate normal --output DP-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal
        wal -R
        ;;
    "ğŸ”€ Double montiors vertical")
        xrandr --output eDP-1 --off --output HDMI-1 --mode 1920x1080 --pos 2560x0 --rotate left --output DP-1 --primary --mode 2560x1440 --pos 0x240 --rotate normal
        wal -R
        ;;
    "âŒ¨ï¸ Double montior plus laptop")
        xrandr --output eDP-1 --mode 2560x1600 --pos 0x0 --rotate normal --output HDMI-1 --mode 1920x1080 --pos 5120x360 --rotate normal --output DP-1 --primary --mode 2560x1440 --pos 2560x0 --rotate normal
        wal -R
        ;;
    "ğŸ–¥ Single montior")
        xrandr --output eDP-1 --off --output HDMI-1 --off --output DP-1 --primary --mode 2560x1440 --pos 0x0 --rotate normal
        wal -R
        ;;
    *) echo "Unavailable command... $mointors"
esac

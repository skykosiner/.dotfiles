#!/usr/bin/env bash

# $1 is the file to prepend
# $2 is the info to prepend with
prepend_file() {
    sed -i "1s/^/$2\n/" "$1"
}

case "$1" in
    "quick-note")
        inbox=$(echo $OBSIDIAN_VAULT/ðŸ“¥ Inbox)
        text=$(dmenu -p "Enter new note > " -h 40 -fn 'JetBrainsMono Nerd Font-15' <&- && echo)
        cd "$inbox" && touch $(date +%Y%m%d%H%M).md
        echo "$text" > "$inbox/$(date +%Y%m%d%H%M).md"
        ;;
    *) echo "Not a command... $1"
esac

#!/usr/bin/env bash
#
send_notif() {
    volume=$(pulsemixer --get-volume | awk '{print $1}')
    if [[ $1 == "up" ]]; then
        dunstify -a "changeVolume" -u low -r 9991 -h int:value:"$volume" "ðŸ”Š Volume: $volume%" -t 2000
    else
        dunstify -a "changeVolume" -u low -r 9991 -h int:value:"$volume" "ðŸ”‰ Volume: $volume%" -t 2000
    fi
}

case $1 in
    "up")
        pactl set-sink-volume @DEFAULT_SINK@ +5%
        send_notif $1
        pkill -SIGRTMIN+10 i3blocks
        ;;
    "down")
        pactl set-sink-volume @DEFAULT_SINK@ -5%
        send_notif $1
        pkill -SIGRTMIN+10 i3blocks
        ;;
    "mute")
        pactl set-sink-mute @DEFAULT_SINK@ toggle
        pkill -SIGRTMIN+10 i3blocks
        ;;
    "-mute-mic")
        MICMUTE=$(pactl list sources | grep "Mute" | sed 's/Mute://g' | xargs | awk '{print $1}')

        if [[ $MICMUTE == "yes" ]];
        then
            micMuteVal="Unmute"
        else
            micMuteVal="Mute"
        fi

        notify-send "Toggle mute mic" "$micMuteVal" -t 300
        pactl set-source-mute @DEFAULT_SOURCE@ toggle
        ;;
    *) echo "Unavailable command... $curr"
esac

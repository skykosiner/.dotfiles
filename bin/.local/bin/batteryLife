#!/usr/bin/env bash

isCharging=$(acpi | awk '{print $3}' | sed 's/,//')
battLevel=$(acpi | awk '{print $4}' | sed 's/,//')

if [[ $isCharging == "Discharging" ]];
then
    battLevelInt=$(echo $battLevel | sed 's/%//')
    battLevelInt=${battLevelInt%?}

    if [[ battLevelInt < 100 ]];
    then
        echo "âš ï¸ " $battLevel
    else
        echo "ðŸ”‹"$battLevel
    fi
else
    echo "ðŸ”Œ"$battLevel
fi


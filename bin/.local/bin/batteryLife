#!/usr/bin/env bash

isCharging=$(acpi | awk '{print $3}' | sed 's/,//')
battLevel=$(acpi | awk '{print $4}' | sed 's/,//' | xargs | awk '{print $1}')

if [[ $isCharging == "Discharging" ]];
then
    battLevelInt=$(echo $battLevel | sed 's/%//')
    battLevelInt=${battLevelInt%?}

    if [[ battLevelInt < 100 ]];
    then
        echo "⚠️ " $battLevel
    else
        echo "🔋"$battLevel
    fi
else
    echo "🔌"$battLevel
fi


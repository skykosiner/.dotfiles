setxkbmap -option caps:ctrl_modifier
setxkbmap -option ctrl:nocaps

searchZshHistory() {
    selected=`cat ~/.zsh_history | fzf`
    $selected
}

searchDotFiles() {
    items=`find $DOTFILES`
    selected=`echo "$items" | fzf`
    nvim $selected
}

password() {
    selected=`cat ~/.dotfiles/password | fzf`
    pass $selected | xclip -in -selection clipboard
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    pushd $DOTFILES
    git add .
    git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
    git push origin master
    popd
}

snyc_mail() {
    mw -y
}

commitSchoolWork() {
    pushd $SCHOOLWORK
    git add .
    git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
    git push origin master
    popd
}

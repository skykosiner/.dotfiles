change_background() {
    directory="/home/yoni/.dotfiles/anime"
    result=$(rg --files $directory| fzf)
    feh --bg-scale $result
}

commitDotFiles() {
    pushd $DOTFILES
    git add .
    git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
    git push origin master
    popd
}

snyc_mail() {
    mw -y
}


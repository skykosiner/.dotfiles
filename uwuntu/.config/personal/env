setxkbmap -option caps:ctrl_modifier
setxkbmap -option ctrl:nocaps
#tmux-start-zsh

passmenu() {
    selected=`cat ~/.dotfiles/password | dmenu`
    pass -c $selected
}

searchZshHistory() {
    selected=`cat ~/.zsh_history | fzf`
    $selected
}

dotfilesStatus() {
    pushd $DOTFILES
    git status
    popd
}

searchDotFiles() {
    items=`find $DOTFILES`
    selected=`echo "$items" | fzf`
    nvim $selected
}

password() {
    selected=`cat ~/.dotfiles/password | fzf`
    pass $selected | xclip -in -selection clipboard
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    if [[ $# -eq 1 ]]; then
        pushd $DOTFILES
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $DOTFILES
        git add .
        git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
        git push origin master
        popd
    fi
}

snyc_mail() {
    mw -y
}

commitSchoolWork() {
    pushd $SCHOOLWORK
    git add .
    git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
    git push origin master
    popd
}

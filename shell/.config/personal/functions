# Edit my dotfiles
de() {
    du -a ~/.dotfiles/ | cut -f2- -d '.'| fzf --height=40% | xargs -I {} nvim ~/.{}
}

oe() {
    find ~/Documents/Linux-btw/ | fzf --height=40% | xargs -I {} nvim {}
}

# I always forget to commit suckless software ЁЯТА
commitSucklessSoftware() {
    pushd ~/.local/src/st/
    git add .
    git commit -am "Forget to commit this so fancy commit from me in the past"
    git push -u origin master
    popd
    pushd ~/.local/src/dwm/
    git add .
    git commit -am "Forget to commit this so fancy commit from me in the past"
    git push -u origin master
    popd
    pushd ~/.local/src/dwmblocks/
    git add .
    git commit -am "Forget to commit this so fancy commit from me in the past"
    git push -u origin master
    popd
}

vpnToggle() {
    vpnStatus=$(nmcli connection show --active | grep wireguard)

    if [[ -z $vpnStatus ]]; then
        sudo wg-quick up sky-arch
    else
        sudo wg-quick down sky-arch
    fi
}

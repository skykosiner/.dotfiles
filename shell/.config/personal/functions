#!/usr/bin/env zsh

path() {
    echo ${PATH//:/\\n}
}

dotfilesStatus() {
    pushd $DOTFILES
    git status
    popd
}

commitDotFiles() {
    if [[ $# -eq 1 ]]; then
        pushd $DOTFILES
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $DOTFILES
        git add .
        git commit -m "commit it baby"
        git push origin master
        popd
    fi
}


# Edit my dotfiles
de() {
    du -a ~/.dotfiles/ | cut -f2- -d '.'| fzf --height=40% | xargs -I {} nvim ~/.{}
}

# Search obsidian
oe() {
    find ~/Documents/Linux-btw/ | fzf --height=40% | xargs -I {} nvim {}
}

# New obisdian note
no() {
    read name
    path="$HOME/Documents/Linux-btw/_Inbox/$name.md"
    /usr/bin/touch $path
    /usr/local/bin/nvim $path
}

# Collage stuff
cw() {
    date=$(date +%d-%m-%Y)
    find ~/Documents/Linux-btw/Collage/ -maxdepth 1 | fzf --height=40% | xargs -I {} nvim {}/$date.md
}

scw() {
    find ~/Documents/Linux-btw/Collage/ | fzf --height=40% | xargs -I {} nvim {}
}


vpnToggle() {
    vpnStatus=$(nmcli connection show --active | grep wireguard)

    if [[ -z $vpnStatus ]]; then
        sudo wg-quick up sky-arch
    else
        sudo wg-quick down sky-arch
    fi
}

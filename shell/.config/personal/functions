#!/usr/bin/env bash

TODO() {
    if [[ $# -eq 1 ]]; then
        rg "TODO" **/*.$1
    elif [[ $# -eq 2 ]]; then
        rg "TODO" $2/**/*.$1
    fi
}


killProcess() {
    ps ax | awk '{print $5}' | dmenu -l 30 | xargs -r pkill $5
}

dotfilesStatus() {
    pushd $DOTFILES
    git status
    popd
}

commitDotFiles() {
    if [[ $# -eq 1 ]]; then
        pushd $DOTFILES
        git add .
        git commit -m $1
        git push origin master
        popd
    else
        pushd $DOTFILES
        git add .
        git commit -m "commit it baby"
        git push origin master
        popd
    fi
}

cpuTemp() {
    sensors | awk '/Tctl/ {print " " $2}' | sed "s/+//g; s/\s//g"
}

convertWordToPDF() {
    pandoc -o $1.pdf -f docx $1.docx
}

